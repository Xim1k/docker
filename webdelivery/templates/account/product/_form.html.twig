<div class="container">
    {{ form_start(form) }}
    <div class="form-group">
        {{ form_label(form.name, 'Название' ) }}
        {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Название'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.description, 'Описание продукта' ) }}
        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Описание продукта'}}) }}
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            {{ form_label(form.count, 'Количество на складе' ) }}
            {{ form_widget(form.count, {'attr': {'class': 'form-control', 'placeholder': '0'}}) }}
        </div>
        <div class="form-group col-md-4">
            {{ form_label(form.price, 'Цена за единицу товара' ) }}
            {{ form_widget(form.price, {'attr': {'class': 'form-control', 'placeholder': '0'}}) }}
        </div>
        <div class="form-group col-md-4">
            {{ form_label(form.external_id, 'Внешний ключ' ) }}
            {{ form_widget(form.external_id, {'attr': {'class': 'form-control', 'placeholder': 'Внешний ключ'}}) }}
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            {{ form_label(form.category, 'Категория' ) }}
            {{ form_widget(form.category, {'attr': {'class': 'form-control', 'placeholder': 'Выберите категорию'}}) }}
        </div>
        <div class="form-group col-md-6">
            {{ form_label(form.image, 'Изображение продукта' ) }}
            {{ form_widget(form.image, {'attr': {'class': 'form-control-file'}}) }}
            <div class="form-error pt-2">
                {{  form_errors(form.image,{ 'attr': {'class': 'form-error'}}) }}
            </div>
        </div>
    </div>
    <button class="btn btn-primary">{{ button_label|default('Создать продукт') }}</button>
    {{ form_end(form) }}
</div>