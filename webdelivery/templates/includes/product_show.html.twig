<!-- Modal -->
<div class="modal fade" id="product-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="product-modalLabel">О товаре</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="modal-body">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-6">
                                <img width="200px" id="product-modal__image" src="">
                            </div>
                            <div class="col-6">
                                <span class="text-muted" id="product-modal__category"></span>
                                <h3 id="product-modal__name"></h3>
                                <h5 id="product-modal__price"></h5>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="col-12" id="product-modal__description">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>