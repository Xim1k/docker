{% extends 'base.html.twig' %}

{% block title %}Регистрация{% endblock %}

{% block body %}
    {{ include('partials/flashes.html.twig') }}
    {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate', 'class': 'form-register shadow-sm'}}) }}
        <h3 class="text-center">Регистрация</h3>
        <div class="register__item">
            <div class="register__item-label">
                {{ form_label(registrationForm.name, 'Имя') }}
            </div>
            <div class="form-error">
                {{ form_errors(registrationForm.name) }}
            </div>
            <div class="register__item-widget">
                {{ form_widget(registrationForm.name, {'attr': {'class': 'form-control', 'placeholder': 'Введите Ваше имя'}}) }}
            </div>
        </div>
        <div class="register__item">
            <div class="register__item-label">
                {{ form_label(registrationForm.surname, 'Фамилия') }}
            </div>
            <div class="form-error">
                {{ form_errors(registrationForm.surname) }}
            </div>
            <div class="register__item-widget">
                {{ form_widget(registrationForm.surname, {'attr': {'class': 'form-control', 'placeholder': 'Введите Вашу фамилию'}}) }}
            </div>
        </div>
        <div class="register__item">
            <div class="register__item-label">
                {{ form_label(registrationForm.email) }}
            </div>
            <div class="form-error">
                {{ form_errors(registrationForm.email) }}
            </div>
            <div class="register__item-widget">
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Адрес электронной почты'}}) }}
            </div>
        </div>
        <div class="register__item">
            <div class="register__item-label">
                {{ form_label(registrationForm.login, 'Логин') }}
            </div>
            <div class="form-error">
                {{ form_errors(registrationForm.login) }}
            </div>
            <div class="register__item-widget">
                {{ form_widget(registrationForm.login, {'attr': {'class': 'form-control', 'placeholder': 'Введите логин'}}) }}
            </div>
            <div class="form-help">
                {{ form_help(registrationForm.login) }}
            </div>
        </div>
        <div class="register__item">
            <div class="register__item-label" style="margin-bottom: 5px">
                Пароль
            </div>
            <div class="form-error">
                {{ form_errors(registrationForm.plainPassword) }}
            </div>
            <div class="register__item-widget">
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Введите пароль'}}) }}
            </div>
            <div class="form-help">
                {{ form_help(registrationForm.plainPassword) }}
            </div>
        </div>
        <button class="align-self-center btn btn-primary btn-block">Подтвердить</button>
        <a class="mt-3" href="{{ path('app_login') }}">Уже есть аккаунт?</a>
    {{ form_end(registrationForm) }}
    </div>
{% endblock %}
